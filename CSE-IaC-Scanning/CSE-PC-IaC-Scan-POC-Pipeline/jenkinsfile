pipeline {
    agent {
        docker {
            image 'paulchak/rhl9-x86_64-kics-snyk-opa:V05'
            args '--platform linux/amd64'
        }
    }

    environment {
        PIPELINE_NM = POC
        APP_NM = JPT
        SNYK_TOKEN = credentials('SNYK_TOKEN')
    }

    stages {
        stage('Checkout Code') {
          steps {
              git branch: 'main', url: 'https://github.com/CVS-Enterprise-IT/CSE-PC-IaC-Scan-POC-Pipeline'
              stash includes: '**/*', name: 'source'
          }
        }

        stage('Create folder & copy Terraform files') {
            steps {
                script {
                   sh 'mkdir -p /scan/tfutp1'
                   sh 'cp -r scan/* /scan/tfutp1'
                }
            }
        }

        stage('Run Test Script') {
            steps {
                script {
                    sh '/apps/bin/iac_srv.sh'
                }
            }
        }
    }

    //Cleanup comment
    post {
        always {
            cleanWs()
    }
}